{
  "name": "angular-library-boilerplate-template",
  "version": "1.0.3",
  "description": "An Angular library boilerplate template",
  "private": false,
  "license": "MIT",
  "type": "module",
  "author": "R. Faraji",
  "homepage": "https://www.github.com/r3zafa",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.js",
  "scripts": {
    "ng": "ng",
    "build": "ng build && npm run copy-cli",
    "test": "ng test",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "update-index": "node _update-index-files.js",
    "generate-structure": "node _generate-structure.js",
    "copy-cli": "cp _create-angular-lib.js dist/"
  },
  "bin": {
    "create-angular-lib": "./create-angular-lib.js"
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/r3zafa/angular-library-boilerplate.git"
  },
  "bugs": {
    "url": "https://www.github.com/r3zafa/angular-library-boilerplate/issues"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "files": [
    "dist",
    "_create-angular-lib.js",
    "src",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "tslib": "^2.3.0",
    "degit": "^2.8.4"
  },
  "devDependencies": {
    "ng-packagr": "^18.0.0",
    "@angular/compiler-cli": "^18.2.13",
    "@angular/cli": "^18.2.13",
    "@angular-devkit/build-angular": "^18.2.13",
    "@types/jasmine": "~5.1.0",
    "eslint": "^8.0.0",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^2.8.0",
    "typescript": "~5.5.0"
  },
  "peerDependencies": {
    "@angular/common": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/router": "^18.0.0",
    "@angular/animations": "^18.0.0",
    "rxjs": "~7.8.0",
    "zone.js": "~0.14.10"
  },
  "keywords": [
    "angular",
    "library",
    "boilerplate",
    "typescript",
    "npm",
    "angular-library",
    "angular-library-boilerplate",
    "cli"
  ]
}
